<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

	package="com.sportsboards2d" 
	android:versionCode="3" 
	android:versionName="1.2">
	<application android:icon="@drawable/icon"
		android:label="@string/app_name">

		<activity android:name="com.sportsboards2d.launcher.LicenseCheck"

			android:label="@string/app_name" 
			android:screenOrientation="landscape">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="com.sportsboards2d.launcher.Launcher"
			android:screenOrientation="landscape" />
		<activity android:name="com.sportsboards2d.boards.SoccerBoard"
			android:screenOrientation="landscape" />
		<activity android:name="com.sportsboards2d.boards.BBallBoard"
			android:screenOrientation="landscape" />	
		
		<activity android:name="com.sportsboards2d.boards.SaveForm"
			android:screenOrientation="landscape" />
		<activity android:name="com.sportsboards2d.boards.DeleteForm"
			android:screenOrientation="landscape" />
		<activity android:name="com.sportsboards2d.boards.LoadForm"
			android:screenOrientation="landscape" />
		

	</application>

	<supports-screens android:largeScreens="true"></supports-screens>
	<uses-sdk android:targetSdkVersion="8" android:minSdkVersion="8"></uses-sdk>

	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="com.android.vending.CHECK_LICENSE">

	</uses-permission>

</manifest> 
