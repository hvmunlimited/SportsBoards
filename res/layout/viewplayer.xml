<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

	<ScrollView
	
		android:id="@+id/scrllvwNo1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"> 
		
		<LinearLayout
			
			android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="vertical">
			
		    <TextView 
		        android:id="@+id/playername_first_view"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:text="@string/enter_first_name"
		        android:gravity="left"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		            
		   	<TextView
		        android:id="@+id/playername_first_text"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginLeft="50dip"
		        android:layout_marginRight="20dip"
		        android:gravity="left"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
		        
		    <TextView 
		        android:id="@+id/playername_last_view"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:text="@string/enter_last_name"
		        android:gravity="left"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		            
		  	<TextView
		        android:id="@+id/playername_last_text"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginLeft="50dip"
		        android:layout_marginRight="20dip"
		        android:gravity="left"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
		
		    <TextView
		        android:id="@+id/playernum_view"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:text="@string/enter_jersey"
		        android:gravity="left"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
			<TextView
		        android:id="@+id/playernum_text"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginLeft="50dip"
		        android:layout_marginRight="20dip"
		        android:gravity="left"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
		        
		   	<TextView
		        android:id="@+id/playerposition_view"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		       	android:text="@string/enter_position"
		        
		        android:gravity="left"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		            
		   <TextView
		        android:id="@+id/playerposition_text"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginLeft="50dip"
		        android:layout_marginRight="20dip"
		        android:gravity="left"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
		        
		</LinearLayout>
			
	</ScrollView>
	
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10px" >
        
			<Button 
				android:id="@+id/ok_button" 
		    	android:layout_width="100dip" 
		        android:layout_height="wrap_content" 
		        android:layout_alignParentLeft="true"
	            android:layout_marginLeft="17px"
	            android:text="OK" 
	            android:onClick="okClicked" />

	            
	</RelativeLayout>			

</LinearLayout>
